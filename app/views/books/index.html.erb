<div class="mb-6">
  <div class="flex justify-between items-center mb-4">
    <h1 class="text-3xl font-bold text-gray-900">Books</h1>
    <% if policy(Book).create? %>
      <%= link_to "Add New Book", new_book_path, 
          class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
    <% end %>
  </div>

  <!-- Search and Filter -->
  <div class="bg-white p-4 rounded-lg shadow mb-6">
    <%= form_with url: books_path, method: :get, local: true, class: "flex flex-wrap gap-4" do |form| %>
      <div class="flex-1 min-w-64">
        <%= form.text_field :search, 
            placeholder: "Search by title or author...", 
            value: params[:search],
            class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>
      
      <div class="min-w-48">
        <%= form.select :genre, 
            options_for_select([["All Genres", ""]] + @genres.map { |g| [g, g] }, params[:genre]),
            {},
            { class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" } %>
      </div>
      
      <div class="flex gap-2">
        <%= form.submit "Search", class: "bg-gray-600 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded" %>
        <%= link_to "Clear", books_path, class: "bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded" %>
      </div>
    <% end %>
  </div>
</div>

<!-- Books Grid -->
<% if @books.any? %>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @books.each do |book| %>
      <div class="bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow duration-200">
        <div class="p-6">
          <h3 class="text-xl font-semibold text-gray-900 mb-2">
            <%= link_to book.title, book_path(book), class: "hover:text-blue-600" %>
          </h3>
          
          <p class="text-gray-600 mb-2">
            <span class="font-medium">Author:</span> <%= book.author %>
          </p>
          
          <p class="text-gray-600 mb-2">
            <span class="font-medium">Genre:</span> 
            <span class="bg-blue-100 text-blue-800 text-xs font-medium px-2.5 py-0.5 rounded">
              <%= book.genre %>
            </span>
          </p>
          
          <p class="text-gray-600 mb-2">
            <span class="font-medium">ISBN:</span> <%= book.isbn %>
          </p>
          
          <p class="text-gray-600 mb-2">
            <span class="font-medium">Copies:</span> <%= book.availability_status %>
          </p>
          
          <div class="flex justify-between items-center">
            <%= link_to "View Details", book_path(book), 
                class: "text-blue-600 hover:text-blue-800 font-medium" %>
            
            <div class="flex gap-2">
              <% if current_user.member? && book.available? && !book.borrowed_by?(current_user) %>
                <%= link_to "Borrow", borrow_book_book_path(book), 
                    method: :post,
                    data: { confirm: "Borrow this book? It will be due in 2 weeks." },
                    class: "bg-green-600 hover:bg-green-700 text-white text-xs font-bold py-1 px-2 rounded" %>
              <% elsif current_user.member? && book.borrowed_by?(current_user) %>
                <span class="text-green-600 text-xs font-medium">Borrowed by you</span>
              <% elsif !book.available? %>
                <span class="text-red-600 text-xs font-medium">Not available</span>
              <% end %>
              
              <% if policy(book).edit? %>
                <%= link_to "Edit", edit_book_path(book), 
                    class: "text-yellow-600 hover:text-yellow-800 font-medium" %>
                <%= link_to "Delete", book_path(book), 
                    method: :delete, 
                    data: { confirm: "Are you sure you want to delete this book?" },
                    class: "text-red-600 hover:text-red-800 font-medium" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="text-center py-12">
    <div class="text-gray-500 text-lg">
      <% if params[:search].present? || params[:genre].present? %>
        No books found matching your search criteria.
      <% else %>
        No books available yet.
        <% if policy(Book).create? %>
          <%= link_to "Add the first book", new_book_path, class: "text-blue-600 hover:text-blue-800 font-medium" %>.
        <% end %>
      <% end %>
    </div>
  </div>
<% end %>
