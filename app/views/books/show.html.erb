<div class="max-w-4xl mx-auto">
  <!-- Header -->
  <div class="flex justify-between items-start mb-6">
    <div>
      <h1 class="text-3xl font-bold text-gray-900 mb-2"><%= @book.title %></h1>
      <p class="text-xl text-gray-600">by <%= @book.author %></p>
    </div>
    
    <% if policy(@book).edit? %>
      <div class="flex gap-2">
        <%= link_to "Edit Book", edit_book_path(@book), 
            class: "bg-yellow-600 hover:bg-yellow-700 text-white font-bold py-2 px-4 rounded" %>
        <%= form_with url: book_path(@book), method: :delete, local: true, class: "inline" do |form| %>
          <%= form.submit "Delete Book", 
              data: { confirm: "Are you sure you want to delete this book? This action cannot be undone." },
              class: "bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-4 rounded border-none cursor-pointer" %>
        <% end %>
      </div>
    <% end %>
  </div>

  <!-- Book Details -->
  <div class="bg-white rounded-lg shadow-md p-6 mb-6">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <h2 class="text-xl font-semibold text-gray-900 mb-4">Book Information</h2>
        
        <div class="space-y-3">
          <div>
            <span class="font-medium text-gray-700">Title:</span>
            <p class="text-gray-900"><%= @book.title %></p>
          </div>
          
          <div>
            <span class="font-medium text-gray-700">Author:</span>
            <p class="text-gray-900"><%= @book.author %></p>
          </div>
          
          <div>
            <span class="font-medium text-gray-700">Genre:</span>
            <p class="text-gray-900">
              <span class="bg-blue-100 text-blue-800 text-sm font-medium px-2.5 py-0.5 rounded">
                <%= @book.genre %>
              </span>
            </p>
          </div>
          
          <div>
            <span class="font-medium text-gray-700">ISBN:</span>
            <p class="text-gray-900 font-mono"><%= @book.isbn %></p>
          </div>
          
          <div>
            <span class="font-medium text-gray-700">Total Copies:</span>
            <p class="text-gray-900"><%= @book.total_copies %></p>
          </div>
          
          <div>
            <span class="font-medium text-gray-700">Availability:</span>
            <p class="text-gray-900"><%= @book.availability_status %></p>
          </div>
        </div>
      </div>
      
      <div>
        <h2 class="text-xl font-semibold text-gray-900 mb-4">Additional Information</h2>
        
        <div class="space-y-3">
          <div>
            <span class="font-medium text-gray-700">Added:</span>
            <p class="text-gray-900"><%= @book.created_at.strftime("%B %d, %Y") %></p>
          </div>
          
          <div>
            <span class="font-medium text-gray-700">Last Updated:</span>
            <p class="text-gray-900"><%= @book.updated_at.strftime("%B %d, %Y at %I:%M %p") %></p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Borrow/Return Actions -->
  <div class="bg-white rounded-lg shadow-md p-6 mb-6">
    <h2 class="text-xl font-semibold text-gray-900 mb-4">Actions</h2>
    
    <% if current_user.member? %>
      <% if @book.available? && !@book.borrowed_by?(current_user) %>
        <%= form_with url: borrow_book_book_path(@book), method: :post, local: true, class: "inline" do |form| %>
          <%= form.submit "Borrow This Book", 
              data: { confirm: "Borrow this book? It will be due in 2 weeks." },
              class: "bg-green-600 hover:bg-green-700 text-white font-bold py-2 px-4 rounded border-none cursor-pointer" %>
        <% end %>
      <% elsif @book.borrowed_by?(current_user) %>
        <div class="flex items-center space-x-4">
          <span class="text-green-600 font-medium">✓ You have borrowed this book</span>
          <% loan = @book.current_loan_for(current_user) %>
          <span class="text-sm text-gray-600">
            Due: <%= loan.due_date.strftime('%B %d, %Y') %>
          </span>
        </div>
      <% else %>
        <span class="text-red-600 font-medium">This book is not available for borrowing</span>
      <% end %>
    <% end %>
  </div>

  <!-- Actions -->
  <div class="flex justify-between items-center">
    <%= link_to "← Back to Books", books_path, 
        class: "text-blue-600 hover:text-blue-800 font-medium" %>
    
    <% if policy(Book).create? %>
      <%= link_to "Add Another Book", new_book_path, 
          class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
    <% end %>
  </div>
</div>
